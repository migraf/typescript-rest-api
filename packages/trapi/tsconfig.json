{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es5",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@trapi/utils": ["../trapi-utils/src"],
            "@trapi/metadata": ["../trapi-metadata/src"],
            "@trapi/swagger": ["../trapi-swagger/src"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../trapi-metadata"
        },
        {
            "path": "../trapi-swagger"
        },
        {
            "path": "../trapi-utils"
        }
    ]
}
