{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es5",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@trapi/utils": ["../utils/src"],
            "@trapi/metadata": ["../metadata/src"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {"path":  "../utils"},
        {"path": "../metadata"}
    ]
}
